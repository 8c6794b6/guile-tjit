(use-modules (srfi srfi-9))

(define-record-type :foo (make-foo x) foo? 
  (x get-x) (y get-y set-y!))

(define f (make-foo 1))
(set-y! f 2)

(with-test-prefix "record procedures"

  (pass-if "predicate"
     (foo? f))

  (pass-if "accessor 1"
     (= 1 (get-x f)))

  (pass-if "accessor 2"
     (= 2 (get-y f)))

  (pass-if "modifier"
     (set-y! f #t)
     (eq? #t (get-y f))))
