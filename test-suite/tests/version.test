(define-module (test-version)
  #:use-module (test-suite lib))

(pass-if "version reporting works"
	 (and (string? (major-version))
	      (string? (minor-version))
	      (string? (micro-version))
	      (string-contains (version)
                               (string-append (major-version) "."
                                              (minor-version) "."
                                              (micro-version)))))
