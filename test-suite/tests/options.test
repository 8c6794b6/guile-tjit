(use-modules (test-suite lib))

(with-test-prefix "options"

  (pass-if "setting an option doesn't reset other options"
	   (let ()
	     (debug-enable 'backwards)
	     (debug-set! maxdepth 555)
	     (if (memq 'backwards (debug-options)) #t #f)))

  )
